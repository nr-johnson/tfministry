section#training(class='container w-100 home-page-section active p-0')
    div(class='row w-100 mx-auto justify-content-center p-md-4 mt-3')
        if data['Video-Code']
            section(class='col-12 col-md-7 col-lg-6 mt-2 mt-md-0 panel multiple order-2 order-md-1')
                div(class='p-md-4')
                    | !{data['Content']}
            section(class='col-12 col-md-5 col-lg-4 ps-md-4 order-1 order-md-2')
                div(class='panel multiple')
                    div(class='p-md-4')
                        div(class='vid-container')
                            a(href="#feature-vid-modal" data-target="feature-vid-modal" class='vid-link' title="Watch Video" onclick='toggleModal(event, this, true)')
                                figure(class='vid-frame' style='')
                                    img(class='vid-img' src="//img.youtube.com/vi/" + data['Video-Code'] + '/maxresdefault.jpg')
                            div#feature-vid-modal(class='vid-modal')
                                a(href="#" class='vid-modal-back' onclick='toggleModal(event, this, false)')
                                div(class="vid-modal-content")
                                    div(class="vid-iFrame")
                                        iframe(src='https://www.youtube.com/embed/' + data['Video-Code'] frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
                        header(class='video-title mt-2')
                            a(href='https://www.youtube.com/watch?v=' + data['Video-Code'] title='Watch on Youtube' target='_blank')
                                h3= data['Video-Title']
                                    img(class='link-icon' src='/images/bootstrap/box-arrow-up-right.svg' alt="Bootstrap-box-arrow-up-right")
                            a(href='https://www.youtube.com/channel/UC-IOvgPzpAmUECjKvwEHlEw' class='video-channel-link' target='_blank') Visit Our Youtube Channel
                                img(class='link-icon-small' src='/images/bootstrap/box-arrow-up-right.svg' alt="Bootstrap-box-arrow-up-right")
                            hr(class='d-md-none')
        else
            section(class='col-12 col-md-10 mt-2 mt-md-0 panel multiple')
                div(class='p-md-4')
                    | !{data['Content']}
    div(class='row w-100 mx-auto p-0 px-md-4 pt-0')  
        div#form-main(class='col-12 col-lg-10 mx-auto panel')
            form#sub-form(class='w-100 h-100' action='/connect/training/y' method='POST' enctype="multipart/form-data" data-target='/connect/training/n' data-goal='/home' onsubmit='submitForm(event, this, true)')
                div(class='p-md-4')
                    header
                        h2(class='special-font text-center') Apply for Training!
                        hr
                    //- Form message
                    if errors
                        div#form-message(class='form-message err show')
                            p(class='form-message-title') Oops...
                            ul
                                for err in errors
                                    li= err.error
                    else if success
                        div#form-message(class='form-message succ show')
                            p(class='form-message-title')= success
                    else
                        div#form-message(class='form-message' )
                    //- Form
                    div(class='row mb-2')
                        div(class='form-item col-6 req')
                            label(class='input-label' for='First-Name') First Name:
                            input(class='input-field' type='text' value=fields['First-Name'] name='First-Name' tabindex='1')
                        div(class='form-item col-6 req')
                            label(class='input-label' for='Last-Name') Last Name:
                            input(class='input-field' type='text' value=fields['Last-Name'] name='Last-Name' tabindex='2')

                    div(class='row mt-2')
                        div(class='form-item req')
                            label(class='input-label' for='Email') Email:
                            input(class='input-field' type='text' value=fields['Email'] name='Email' tabindex='3')
                    br
                    
                    div(class='row mt-2')
                        div(class='form-item')
                            label(class='input-label' for='Phone-Number') Phone Number:
                            input(class='input-field' type='tel' format='123-456-7890' placeholder='(xxx-xxx-xxxx) Optional' value=fields['Phone-Number'] name='Phone-Number' tabindex='4')
                    br

                    div(class='row mt-2')
                        div(class='form-item')
                            label(class='input-label' for='Address-Line-1') Address Line 1:
                            input(class='input-field' type='text' placeholder='Optional' value=fields['Address-Line-1'] name='Address-Line-1' tabindex='5')
                        div(class='form-item mt-2')
                            label(class='input-label' for='Address-Line-2') Address Line 2:
                            input(class='input-field' type='text' placeholder='Optional' value=fields['Address-Line-2'] name='Address-Line-2' tabindex='6')
                        div(class='form-item mt-2')
                            label(class='input-label' for='City/Town') City/Town:
                            input(class='input-field' type='text' placeholder='Optional' value=fields['City/Town'] name='City/Town' tabindex='7')
                    
                    div(class='row mt-2')
                        div(class='form-item col-6')
                            label(class='input-label' for='State') State:
                            input(class='input-field' type='text' placeholder='Optional' value=fields['State'] name='State' tabindex='8')
                        div(class='form-item col-6')
                            label(class='input-label' for='Zip-Code') Zip Code:
                            input(class='input-field' type='text' placeholder='Optional' value=fields['Zip-Code'] name='Zip-Code' tabindex='9')
                    br

                    div(class='row mt-2')
                        div(class='form-item col-12 req')
                            label(class='input-label' for='Country') Country:
                            input(class='input-field' type='text' value=fields['Country'] name='Country' tabindex='10')
                    br

                    div(class='row mt-2')
                        div(class='form-item')
                            label(class='input-label' for='Message') Message:
                            div(class='richEdit' data-name='Message' data-placeHolder='Optional' data-tab='11')
                            textarea(id='Message' class='input-field' name='Message' tabindex='11')=fields['Message']
                
                div(class='w-100 text-end panel-end')
                    button#submit(class='btn btn-submit loader col-12 col-md-4' tabindex='12') Submit

    script.
        window.setTimeout(() => {
            showCaptchaBadge()
        }, 200)
        