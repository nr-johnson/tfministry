doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet")
    link(rel='shortcut icon' href='/images/Logo.ico')

    script(src="https://cdn.quilljs.com/1.3.7/quill.js")

    script(src='https://www.google.com/recaptcha/api.js?render=6Ld1_d0iAAAAAL8IaSkszeZdcGiV0RsIY-U7sAt9' async)
    
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")

    meta(property="og:url" content='https://www.tfministry.net/' + url)
    block head

  body#body(class='link-' + pageIndex)
    include ../views/templates/header.pug
    
    include ../views/templates/promt.pug

    main
      template#serverErr
        section(class='container mt-5')
          div(class='row w-100 mx-auto')
            div(class='col-12 col-md-6 col-lg-4 col-xl-3 mx-auto text-center')
              header
                h2 Uh Oh...
                hr
              div
                span Error getting data from server. 
                  br
                  | Try refreshing the page
                  
      div#pageContent(class='home-page-main show')
        block content
    
    include ../views/templates/footer.pug

    include ../views/templates/mobileNav.pug    

    include ../views/templates/myAlert.pug
    
    script(src="/scripts/script.js")
    if target
      script.
        let pageCont = document.getElementById('pageContent')
        let target = pageCont.children[0].id
        window.setTimeout(() => {
          addToHistory(target)
        }, 200)

    